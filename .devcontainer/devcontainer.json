{
  "name": "Chiba CP DevContainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/gcc:1": {
      "version": "12"
    },
    "ghcr.io/devcontainers/features/pypy:1": {
      "version": "pypy3.9"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "stable"
    }
  },
  "postCreateCommand": "chmod +x newcpp newpy newrs && echo 'alias newcpp=./newcpp' >> ~/.bashrc && echo 'alias newpy=./newpy' >> ~/.bashrc && echo 'alias newrs=./newrs' >> ~/.bashrc && sudo apt update && sudo apt install -y clang-format",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "rust-lang.rust-analyzer",
        "formulahendry.code-runner",
        "editorconfig.editorconfig",
        "foxundermoon.shell-format"
      ]
    }
  }
}
